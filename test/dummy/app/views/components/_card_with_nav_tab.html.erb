%>

<div id="root">
    <div id="default">
        <%= card_with_nav_tab_helper do |tab|%>
            <%= tab.nav do |nav| %>
                <%= nav.item :item_1, class: 'active' %>
                <%= nav.item(:item_2) do %>
                    Item 2 
                <% end %>
                <%= nav.item(:item_3) { 'Item 3' } %>
                <%= nav.item(:item_4) { 'Item 4' } %>
                <%= nav.item(:item_5) { 'Item 5' } %>
                <%= nav.dropdown :more do |dropdown| %>
                    <%= dropdown.item(:item_6) { 'Item 6' } %>
                    <%= dropdown.item(:item_7) { 'Item 7' } %>
                <% end %>
            <% end %>
            <%= tab.content do |content| %>
                <%= content.pane :item_1, class: 'active' do %>
                    Content for: Item 1
                <% end %>
                <%= content.pane :item_2 do %>
                    Content for: Item 2
                <% end %>
                <%= content.pane :item_3 do %>
                    Content for: Item 3
                <% end %>
                <%= content.pane :item_4 do %>
                    Content for: Item 4
                <% end %>
                <%= content.pane :item_5 do %>
                    Content for: Item 5
                <% end %>
                <%= content.pane :item_6 do %>
                    Content for: Item 6
                <% end %>
                <%= content.pane :item_7 do %>
                    Content for: Item 7
                <% end %>
            <% end %>
        <% end %>
    </div>
    <div id="custom">
        <%= card_with_nav_tab_helper(
            :primary,
            class: 'custom-card-with-navs',
            id:    'custom_card_with_navs',
            data:  { name: 'CustomCardWithNavs' }
        ) do |tab|%>
            <%= tab.nav do |nav| %>
                <%= nav.item(
                    :custom_item_1,
                    class: 'active custom-item-1-nav',
                    id:    'custom_item_1_nav',
                    data:  { name: 'CustomItem1Nav' }
                ) do %>
                    Custom Item 2 different than link.
                <% end %>
                <%= nav.item(
                    :custom_item_2,
                    class: 'custom-item-2-nav',
                    id:    'custom_item_2_nav',
                    data:  { name: 'CustomItem2Nav' }
                ) %>
                <%= nav.dropdown(
                    :custom_more,
                    class: 'custom-more-nav',
                    id:    'custom_more_nav',
                    daata:  { name: 'CustomMoreNav'}
                ) do |dropdown| %>
                    <%= dropdown.item(:custom_item_3) { 'Item 3' } %>
                    <%= dropdown.item(:custom_item_4) { 'Item 4' } %>
                <% end %>
            <% end %>
            <%= tab.content do |content| %>
                <%= content.pane :custom_item_1, class: 'active' do %>
                    Content for: Item 1
                <% end %>
                <%= content.pane :custom_item_2 do %>
                    Content for: Item 2
                <% end %>
                <%= content.pane :custom_item_3 do %>
                    Content for: Item 3
                <% end %>
                <%= content.pane :custom_item_4 do %>
                    Content for: Item 4
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>